---
/**
 * Centered Card with Prominent Rating - Jasper Style
 * Based on Jasper AI review style - centered layout with star rating
 */

import OptimizedImage from './ui/OptimizedImage.astro';

export interface Props {
  title: string;
  description: string;
  price: string;
  originalPrice?: string;
  image: string;
  imageAlt: string;
  affiliateUrl: string;
  rating?: number;
  reviewCount?: number;
  brand?: string;
  features?: string[];
  pros?: string[];
  cons?: string[];
  badge?: string;
  buttonText?: string;
}

const {
  title,
  description,
  price,
  originalPrice,
  image,
  imageAlt,
  affiliateUrl,
  rating,
  reviewCount,
  brand,
  features,
  pros,
  cons,
  badge,
  buttonText,
} = Astro.props;

const discountPercent =
  originalPrice && price
    ? Math.round(
        ((parseFloat(originalPrice.replace("$", "")) -
          parseFloat(price.replace("$", ""))) /
          parseFloat(originalPrice.replace("$", ""))) *
          100,
      )
    : null;
---

<!-- Centered Card with Prominent Rating - Theme System -->
<article class="theme-card relative mb-8 max-w-2xl mx-auto" style="border: 4px solid var(--color-accent); border-radius: var(--radius-lg);">
  <!-- Badge in top-left corner -->
  {badge && (
    <div class="absolute -top-3 left-8">
      <div class="relative">
        <div class="text-white text-sm font-bold px-4 py-2" style="background: var(--color-accent); border-radius: var(--radius-md);">
          {badge}
        </div>
        <!-- Speech bubble pointer -->
        <div class="absolute top-full left-6 w-0 h-0 border-l-[8px] border-l-transparent border-r-[8px] border-r-transparent border-t-[8px]" style="border-top-color: var(--color-accent);"></div>
      </div>
    </div>
  )}

  <div class="text-center" style="padding: var(--card-padding);">
    <!-- Title -->
    <h3 class="text-2xl font-bold mb-4" style="color: var(--text-primary); font-family: var(--font-heading);">
      {title}
    </h3>

    <!-- Product Image -->
    <div class="mb-6">
      <OptimizedImage
        src={image}
        alt={imageAlt}
        width={128}
        height={128}
        class="w-32 h-32 object-cover mx-auto shadow-md"
        style="border-radius: var(--radius-lg);"
        loading="lazy"
      />
    </div>

    <!-- Description -->
    <p class="leading-relaxed mb-6 text-lg" style="color: var(--text-secondary);">
      {description}
    </p>

    <!-- Pros & Cons Section -->
    {(pros && pros.length > 0) || (cons && cons.length > 0) ? (
      <div class="mb-6">
        <div class="grid md:grid-cols-2 gap-4 max-w-2xl mx-auto">
          {pros && pros.length > 0 && (
            <div>
              <h4 class="text-lg font-semibold mb-3 text-green-700">Pros:</h4>
              <ul class="space-y-2 text-left">
                {pros.slice(0, 3).map((pro) => (
                  <li class="flex items-start text-green-800">
                    <svg class="w-4 h-4 mr-2 flex-shrink-0 mt-0.5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-sm">{pro}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}

          {cons && cons.length > 0 && (
            <div>
              <h4 class="text-lg font-semibold mb-3 text-red-700">Cons:</h4>
              <ul class="space-y-2 text-left">
                {cons.slice(0, 3).map((con) => (
                  <li class="flex items-start text-red-800">
                    <svg class="w-4 h-4 mr-2 flex-shrink-0 mt-0.5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-sm">{con}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      </div>
    ) : null}

    <!-- Rating Section -->
    {rating && (
      <div class="mb-8">
        <div class="flex justify-center items-center gap-2 mb-2">
          {Array.from({ length: 5 }, (_, i) => (
            <svg
              class={`w-8 h-8 ${i < Math.floor(rating) ? "text-yellow-400" : "text-gray-300"}`}
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          ))}
        </div>
        <div class="text-3xl font-bold mb-1" style="color: var(--text-primary);">{rating}</div>
      </div>
    )}

    <!-- Price Section -->
    {price && (
      <div class="mb-6">
        <span class="text-2xl font-bold" style="color: var(--color-primary-accessible); font-family: var(--font-heading);">
          {price}
        </span>
        {originalPrice && (
          <span class="text-lg line-through ml-2" style="color: var(--text-muted-accessible);">
            {originalPrice}
          </span>
        )}
      </div>
    )}

    <!-- Single Action Button -->
    <div>
      <a
        href={affiliateUrl}
        target="_blank"
        rel="noopener noreferrer sponsored"
        class="theme-button-primary inline-flex items-center justify-center gap-2"
        style="color: white; padding: 1rem 2rem;"
      >
        {buttonText || "View Deal"}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</article>