---
/**
 * Horizontal Product Box for Affiliate Marketing
 * Image LEFT, Content RIGHT - side by side layout
 */

import OptimizedImage from './ui/OptimizedImage.astro';

export interface Props {
  title: string;
  description: string;
  price: string;
  originalPrice?: string;
  image: string;
  imageAlt: string;
  affiliateUrl: string;
  rating?: number;
  reviewCount?: number;
  brand?: string;
  features?: string[];
  pros?: string[];
  cons?: string[];
  badge?: string;
  buttonText?: string;
}

const {
  title,
  description,
  price,
  originalPrice,
  image,
  imageAlt,
  affiliateUrl,
  rating,
  reviewCount,
  brand,
  features,
  pros,
  cons,
  badge,
  buttonText,
} = Astro.props;

const discountPercent =
  originalPrice && price
    ? Math.round(
        ((parseFloat(originalPrice.replace("$", "")) -
          parseFloat(price.replace("$", ""))) /
          parseFloat(originalPrice.replace("$", ""))) *
          100,
      )
    : null;
---

<!-- Horizontal Product Box - Image LEFT, Content RIGHT -->
<article class="theme-card overflow-hidden mb-8">
  <div class="flex flex-col md:flex-row md:items-center">
    <!-- LEFT: Clean Product Image (Centered) -->
    <div class="md:w-1/3 flex-shrink-0 flex items-center">
      <OptimizedImage
        src={image}
        alt={imageAlt}
        width={400}
        height={256}
        class="w-full h-64 object-cover"
        loading="lazy"
        style="border-radius: var(--radius-lg);"
      />
    </div>

    <!-- RIGHT: All Content (Centered) -->
    <div
      class="flex-1 flex flex-col justify-center"
      style="padding: var(--card-padding);"
    >
      <!-- Badges in content area -->
      <div class="flex gap-2 mb-3">
        {badge && <span class="theme-badge">{badge}</span>}
        {
          discountPercent && (
            <span
              class="text-white text-xs font-bold px-2 py-1"
              style="background: var(--color-discount); border-radius: var(--radius-md);"
            >
              -{discountPercent}%
            </span>
          )
        }
      </div>

      <!-- Brand -->
      {
        brand && (
          <p
            class="text-sm font-medium mb-2"
            style="color: var(--color-primary-accessible);"
          >
            {brand}
          </p>
        )
      }

      <!-- Title -->
      <h3
        class="text-xl font-bold mb-3"
        style="color: var(--text-primary); font-family: var(--font-heading);"
      >
        {title}
      </h3>

      <!-- Description -->
      <p class="mb-4" style="color: var(--text-secondary);">
        {description}
      </p>

      <!-- Rating -->
      {
        rating && (
          <div class="flex items-center gap-2 mb-4">
            <div class="flex">
              {Array.from({ length: 5 }, (_, i) => (
                <svg
                  class="w-4 h-4"
                  style={`color: ${i < Math.floor(rating) ? "var(--color-rating-active)" : "var(--color-rating-inactive)"}`}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            {reviewCount && (
              <span
                class="text-sm"
                style="color: var(--text-muted-accessible);"
              >
                ({reviewCount})
              </span>
            )}
          </div>
        )
      }

      <!-- Features -->
      {
        features && features.length > 0 && (
          <ul class="mb-4 space-y-1">
            {features.slice(0, 3).map((feature) => (
              <li
                class="flex items-center text-sm"
                style="color: var(--text-secondary);"
              >
                <svg
                  class="w-3 h-3 mr-2"
                  style="color: var(--color-primary-accessible);"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        )
      }

      <!-- Price and Button -->
      <div class="flex items-center justify-between">
        <div>
          <span
            class="text-2xl font-bold"
            style="color: var(--color-primary-accessible); font-family: var(--font-heading);"
          >
            {price}
          </span>
          {
            originalPrice && (
              <span
                class="text-lg line-through ml-2"
                style="color: var(--text-muted-accessible);"
              >
                {originalPrice}
              </span>
            )
          }
        </div>

        <a
          href={affiliateUrl}
          target="_blank"
          rel="noopener noreferrer sponsored"
          class="theme-button-primary"
          style="color: white;"
        >
          {buttonText || "View Deal"}
        </a>
      </div>
    </div>
  </div>

  <!-- Pros/Cons (Always visible) -->
  {
    (pros && pros.length > 0) || (cons && cons.length > 0) ? (
      <div style="border-top: 1px solid var(--border-light);">
        <div class="px-6 py-6">
          <h4
            class="font-semibold mb-4"
            style="color: var(--text-primary); font-family: var(--font-heading);"
          >
            Pros & Cons
          </h4>

          <div class="grid md:grid-cols-2 gap-6">
            {pros && pros.length > 0 && (
              <div
                class="p-4"
                style="background: color-mix(in srgb, var(--color-primary-accessible) 8%, transparent); border-radius: var(--radius-lg); border-left: 4px solid var(--color-primary-accessible);"
              >
                <h5
                  class="font-semibold mb-3 flex items-center gap-2"
                  style="color: var(--color-success-dark); font-family: var(--font-heading);"
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  Pros
                </h5>
                <ul class="space-y-2">
                  {pros.map((pro) => (
                    <li class="text-sm flex items-start gap-2" style="color: var(--color-success-darker);">
                      <span class="font-bold" style="color: var(--color-success);">•</span>
                      <span>{pro}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {cons && cons.length > 0 && (
              <div
                class="p-4"
                style="background: color-mix(in srgb, var(--color-accent) 8%, transparent); border-radius: var(--radius-lg); border-left: 4px solid var(--color-accent);"
              >
                <h5
                  class="font-semibold mb-3 flex items-center gap-2"
                  style="color: var(--color-error-dark); font-family: var(--font-heading);"
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  Cons
                </h5>
                <ul class="space-y-2">
                  {cons.map((con) => (
                    <li class="text-sm flex items-start gap-2" style="color: var(--color-error-darker);">
                      <span class="font-bold" style="color: var(--color-error);">•</span>
                      <span>{con}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </div>
      </div>
    ) : null
  }
</article>
