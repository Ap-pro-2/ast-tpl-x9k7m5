---
/**
 * Clean Magazine Layout Component - Dynamic & Professional
 */

import { getAllPosts, getSiteSettings } from "../../core/blogLogic";

// Get all posts data using your core logic
const allPosts = await getAllPosts();
const settings = await getSiteSettings();
const featuredPosts = allPosts.slice(0, 6); // Limit to 6 articles
---

<section class="py-8 lg:py-12" style="background: var(--bg-primary);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Clean Section Header -->
        <div class="text-center mb-8 lg:mb-10">
            <!-- Dynamic Eyebrow Text -->
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full mb-4 theme-card-glass">
                <div class="w-2 h-2 rounded-full animate-pulse" style="background: var(--color-primary);"></div>
                <span class="text-xs font-semibold text-gradient uppercase tracking-wider">
                    Latest Reviews
                </span>
            </div>
            
            <!-- Main Headline -->
            <h2 class="text-2xl lg:text-3xl font-bold text-gradient mb-2">
                Recent Articles
            </h2>
            
            <!-- Description -->
            <p class="text-sm lg:text-base max-w-2xl mx-auto leading-relaxed" style="color: var(--text-secondary);">
                Discover our latest insights and expert reviews
            </p>
        </div>

        <!-- Clean Magazine-Style Articles -->
        <div class="space-y-8">
            {featuredPosts.map((post) => (
                <article class="theme-card hover-lift group/article cursor-pointer overflow-hidden">
                    <div class="flex flex-col lg:flex-row h-full">
                        <!-- Clean Image Section -->
                        <div class="lg:w-2/5 relative">
                            <a href={`/blog/${post.id}`} class="block">
                                <div class="aspect-[16/10] lg:aspect-[4/3] overflow-hidden relative">
                                    {post.data.image?.url ? (
                                        <img
                                            src={post.data.image.url}
                                            alt={post.data.image.alt || post.data.title}
                                            class="w-full h-full object-cover group-hover/article:scale-105 transition-transform duration-300"
                                            loading="lazy"
                                        />
                                    ) : (
                                        <div class="w-full h-full flex items-center justify-center" style="background: var(--bg-secondary);">
                                            <svg class="w-16 h-16 text-gradient" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                            </svg>
                                        </div>
                                    )}
                                </div>
                            </a>
                            
                            <!-- Dynamic Category Badge -->
                            {post.data.category && (
                                <div class="absolute top-4 left-4">
                                    <div class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-white text-xs font-semibold shadow-lg" style="background: var(--color-primary);">
                                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                        </svg>
                                        {typeof post.data.category === 'string' ? post.data.category : post.data.category?.name || 'Article'}
                                    </div>
                                </div>
                            )}
                        </div>

                        <!-- Clean Content Section -->
                        <div class="lg:w-3/5 p-6 lg:p-8 flex flex-col justify-center">
                            <a href={`/blog/${post.id}`} class="block h-full flex flex-col">
                                <!-- Article Title -->
                                <h3 class="text-2xl lg:text-3xl font-bold leading-tight mb-4 group-hover/article:text-gradient transition-all duration-300 flex-grow" style="color: var(--text-primary); font-family: var(--font-heading);">
                                    {post.data.title}
                                </h3>

                                <!-- Article Description -->
                                {post.data.description && (
                                    <p class="text-sm lg:text-base leading-relaxed mb-6 line-clamp-3 flex-grow" style="color: var(--text-secondary);">
                                        {post.data.description}
                                    </p>
                                )}

                                <!-- Clean Meta Info -->
                                <div class="flex items-center justify-between mt-auto pt-4" style="border-top: 1px solid var(--border-light);">
                                    <div class="flex items-center gap-4 text-xs" style="color: var(--text-muted);">
                                        <div class="flex items-center gap-2">
                                            <div class="w-6 h-6 rounded-full flex items-center justify-center text-white text-xs font-bold" style="background: var(--color-primary);">
                                                {(settings.author || "A").charAt(0).toUpperCase()}
                                            </div>
                                            <span class="font-semibold" style="color: var(--text-primary);">{settings.author || "Author"}</span>
                                        </div>
                                        <div class="flex items-center gap-2">
                                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                            </svg>
                                            <time datetime={post.data.pubDate.toISOString()}>
                                                {new Date(post.data.pubDate).toLocaleDateString("en-US", {
                                                    month: "short",
                                                    day: "numeric",
                                                    year: "numeric"
                                                })}
                                            </time>
                                        </div>
                                    </div>
                                    
                                    <!-- Clean Read More -->
                                    <div class="flex items-center gap-1 text-xs font-semibold group-hover/article:text-gradient transition-all duration-300" style="color: var(--color-primary);">
                                        <span>Read Article</span>
                                        <svg class="w-4 h-4 group-hover/article:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                        </svg>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </article>
            ))}
        </div>

        <!-- Clean All Articles Button -->
        <div class="text-center mt-12">
            <a href="/blog" class="btn-premium btn-primary inline-flex items-center gap-2">
                <span>All Articles</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
            </a>
        </div>
    </div>
</section>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>