---
/**
 * Featured Reviews Section - Clean & Professional
 */

import { getAllPosts } from "../../core/blogLogic";

// Get featured posts using core logic
const allPosts = await getAllPosts();
const featuredPosts = allPosts.filter(post => post.data.featured).slice(0, 3);
---

<section class="relative overflow-hidden" 
         style="background: var(--bg-primary); padding: var(--space-2xl) 0;">
  
  <!-- Subtle Background Pattern -->
  <div class="absolute inset-0 opacity-3" 
       style="background-image: radial-gradient(circle at 20% 80%, var(--color-accent) 0%, transparent 50%), 
                               radial-gradient(circle at 80% 20%, var(--color-primary) 0%, transparent 50%);"></div>
  
  <div class="max-w-7xl mx-auto relative z-10" style="padding: 0 var(--space-lg);">
    
    <!-- Enhanced Section Header -->
    <div class="text-center" style="margin-bottom: var(--space-2xl);">
      
      <!-- Enhanced Eyebrow Text -->
      <div class="inline-flex items-center rounded-full mb-6 transition-all duration-300 hover:scale-105"
           style="padding: var(--space-sm) var(--space-lg); 
                  gap: var(--space-xs);
                  background: var(--surface-floating); 
                  border: 1px solid var(--border-light);
                  backdrop-filter: blur(20px);
                  box-shadow: var(--shadow-sm);">
        <div class="w-2 h-2 rounded-full animate-pulse" style="background: var(--color-success);"></div>
        <span class="font-semibold text-gradient uppercase tracking-wider"
              style="font-size: var(--text-fluid-xs);">
          Editor's Choice
        </span>
      </div>
      
      <!-- Enhanced Main Headline -->
      <h2 class="text-gradient mb-4"
          style="font-size: var(--text-fluid-3xl); 
                 font-weight: bold;
                 line-height: var(--leading-tight);
                 font-family: var(--font-heading);">
        Featured Reviews
      </h2>
      
      <!-- Enhanced Description -->
      <p class="max-w-2xl mx-auto" 
         style="color: var(--text-secondary);
                font-family: var(--font-body);
                font-size: var(--text-fluid-base);
                line-height: var(--leading-relaxed);">
        Our expert team has tested and reviewed the top digital marketing tools
      </p>
    </div>

    <!-- Enhanced Featured Reviews Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3" style="gap: var(--space-xl);">
      {featuredPosts.map((post) => (
        <article class="group/card cursor-pointer h-full flex flex-col rounded-xl overflow-hidden transition-all duration-500"
                 style="background: var(--surface-raised);
                        border: 1px solid var(--border-light);
                        box-shadow: var(--shadow-md);
                        transition: all var(--animation-duration) var(--animation-easing);"
                 onmouseover="this.style.transform='translateY(-6px) scale(1.02)'; this.style.boxShadow='var(--shadow-xl)'; this.style.borderColor='var(--color-primary)'; this.style.background='var(--surface-floating)';"
                 onmouseout="this.style.transform='translateY(0) scale(1)'; this.style.boxShadow='var(--shadow-md)'; this.style.borderColor='var(--border-light)'; this.style.background='var(--surface-raised)';">
          <a href={`/blog/${post.id}`} class="block h-full flex flex-col">
            
            <!-- Enhanced Image Section -->
            <div class="aspect-[16/10] overflow-hidden relative">
              {post.data.image?.url ? (
                <img
                  src={post.data.image.url}
                  alt={post.data.image.alt || post.data.title}
                  class="w-full h-full object-cover group-hover/card:scale-110 transition-transform duration-700"
                  loading="lazy"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center" 
                     style="background: var(--surface-sunken);">
                  <svg class="w-12 h-12 text-gradient transition-transform duration-300 group-hover/card:scale-110" 
                       fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                          d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                  </svg>
                </div>
              )}
              
              <!-- Enhanced Featured Badge -->
              {post.data.featured && (
                <div class="absolute transition-all duration-300 hover:scale-105" 
                     style="top: var(--space-md); left: var(--space-md);">
                  <div class="inline-flex items-center rounded-full font-semibold shadow-lg"
                       style="padding: var(--space-xs) var(--space-sm);
                              gap: var(--space-2xs);
                              background: var(--color-warning);
                              color: var(--bg-primary);
                              font-size: var(--text-fluid-xs);">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                    Featured
                  </div>
                </div>
              )}
            </div>

            <!-- Enhanced Content Section -->
            <div class="flex-1 flex flex-col" style="padding: var(--space-lg);">
              
              <!-- Enhanced Article Title -->
              <h3 class="font-bold leading-tight line-clamp-2 group-hover/card:text-gradient transition-all duration-300 flex-grow" 
                  style="color: var(--text-primary); 
                         font-family: var(--font-heading);
                         font-size: var(--text-fluid-lg);
                         line-height: var(--leading-tight);
                         margin-bottom: var(--space-sm);">
                {post.data.title}
              </h3>

              <!-- Enhanced Description -->
              {post.data.description && (
                <p class="leading-relaxed line-clamp-3 flex-grow" 
                   style="color: var(--text-secondary);
                          font-family: var(--font-body);
                          font-size: var(--text-fluid-sm);
                          line-height: var(--leading-relaxed);
                          margin-bottom: var(--space-md);">
                  {post.data.description}
                </p>
              )}

              <!-- Enhanced Meta Info with Interactive States -->
              <div class="flex items-center justify-between mt-auto" 
                   style="padding-top: var(--space-md); 
                          border-top: 1px solid var(--border-light);">
                
                <div class="flex items-center transition-colors duration-300 hover:text-info" 
                     style="gap: var(--space-xs); color: var(--text-muted);">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" 
                       style="color: var(--color-info);">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <span style="font-size: var(--text-fluid-xs);">
                    {new Date(post.data.pubDate).toLocaleDateString("en-US", { month: "short", day: "numeric" })}
                  </span>
                </div>
                
                <!-- Enhanced Read More with Interactive States -->
                <div class="flex items-center font-semibold group-hover/card:text-gradient transition-all duration-300" 
                     style="gap: var(--space-2xs); 
                            color: var(--color-primary);
                            font-size: var(--text-fluid-xs);">
                  <span>Read Review</span>
                  <svg class="w-3 h-3 group-hover/card:translate-x-1 transition-transform duration-300" 
                       fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>