---
/**
 * Featured Reviews Section - Clean & Professional
 */

import { getAllPosts } from "../../core/blogLogic";

// Get featured posts using core logic
const allPosts = await getAllPosts();
const featuredPosts = allPosts.filter(post => post.data.featured).slice(0, 3);
---

<section class="py-8 lg:py-12" style="background: var(--bg-primary);">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Clean Section Header -->
    <div class="text-center mb-8 lg:mb-10">
      <!-- Eyebrow Text -->
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full mb-4 theme-card-glass">
        <div class="w-2 h-2 rounded-full bg-gradient-to-r from-green-400 to-green-500 animate-pulse"></div>
        <span class="text-xs font-semibold text-gradient uppercase tracking-wider">
          Editor's Choice
        </span>
      </div>
      
      <!-- Main Headline -->
      <h2 class="text-2xl lg:text-3xl font-bold text-gradient mb-2">
        Featured Reviews
      </h2>
      
      <!-- Description -->
      <p class="text-sm lg:text-base max-w-2xl mx-auto leading-relaxed" style="color: var(--text-secondary);">
        Our expert team has tested and reviewed the top digital marketing tools
      </p>
    </div>

    <!-- Clean Featured Reviews Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {featuredPosts.map((post) => (
        <article class="theme-card hover-lift group/card cursor-pointer h-full flex flex-col">
          <a href={`/blog/${post.id}`} class="block h-full flex flex-col">
            
            <!-- Clean Image Section -->
            <div class="aspect-[16/10] overflow-hidden relative">
              {post.data.image?.url ? (
                <img
                  src={post.data.image.url}
                  alt={post.data.image.alt || post.data.title}
                  class="w-full h-full object-cover group-hover/card:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center" style="background: var(--bg-secondary);">
                  <svg class="w-12 h-12 text-gradient" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                  </svg>
                </div>
              )}
              
              <!-- Featured Badge (only if post is featured) -->
              {post.data.featured && (
                <div class="absolute top-4 left-4">
                  <div class="inline-flex items-center gap-1 px-3 py-1 rounded-full bg-gradient-to-r from-blue-500 to-purple-600 text-white text-xs font-semibold shadow-lg">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                    Featured
                  </div>
                </div>
              )}
            </div>

            <!-- Clean Content Section -->
            <div class="p-6 flex-1 flex flex-col">
              <!-- Article Title -->
              <h3 class="text-lg lg:text-xl font-bold leading-tight mb-3 line-clamp-2 group-hover/card:text-gradient transition-all duration-300 flex-grow" style="color: var(--text-primary); font-family: var(--font-heading);">
                {post.data.title}
              </h3>

              <!-- Description -->
              {post.data.description && (
                <p class="text-sm lg:text-base mb-4 leading-relaxed line-clamp-3 flex-grow" style="color: var(--text-secondary);">
                  {post.data.description}
                </p>
              )}

              <!-- Meta Info -->
              <div class="flex items-center justify-between mt-auto pt-4" style="border-top: 1px solid var(--border-light);">
                <div class="flex items-center gap-2 text-xs" style="color: var(--text-muted);">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <span>{new Date(post.data.pubDate).toLocaleDateString("en-US", { month: "short", day: "numeric" })}</span>
                </div>
                
                <!-- Clean Read More -->
                <div class="flex items-center gap-1 text-xs font-semibold group-hover/card:text-gradient transition-all duration-300" style="color: var(--color-primary);">
                  <span>Read Review</span>
                  <svg class="w-3 h-3 group-hover/card:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>