---
/**
 * Clean Pagination Component - Theme System Only
 */

interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl?: string;
}

const { currentPage, totalPages, baseUrl = '/blog' } = Astro.props;
---

<nav class="flex justify-center mt-8" aria-label="Pagination">
  <div class="flex items-center gap-2">
    {Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => {
      const isActive = page === currentPage;
      const href = page === 1 ? baseUrl : `${baseUrl}/${page}`;
      
      return (
        <a
          href={href}
          class={`px-4 py-2 rounded-lg font-medium theme-font-heading transition-colors ${
            isActive
              ? 'bg-[var(--color-primary)] text-white'
              : 'theme-text-secondary hover:bg-[var(--bg-secondary)] hover:text-[var(--color-primary)]'
          }`}
          aria-current={isActive ? 'page' : undefined}
        >
          {page}
        </a>
      );
    })}
    
    {currentPage < totalPages && (
      <a
        href={`${baseUrl}/${currentPage + 1}`}
        class="px-3 py-2 theme-text-secondary hover:text-[var(--color-primary)] transition-colors"
        aria-label="Next page"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    )}
  </div>
</nav>