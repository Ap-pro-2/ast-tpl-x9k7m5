---
/**
 * Newsletter CTA Section - Magazine Style
 */

import { getSiteSettings } from "../../core/blogLogic";

// Get site settings using core logic
const settings = await getSiteSettings();
---

<section class="py-16 lg:py-20">
  <div class="max-w-7xl mx-auto px-4">
    <div class="relative rounded-3xl overflow-hidden" style="background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-10 left-10 w-20 h-20 rounded-full border-2 border-white"></div>
        <div class="absolute top-20 right-20 w-16 h-16 rounded-full border-2 border-white"></div>
        <div class="absolute bottom-10 left-1/4 w-12 h-12 rounded-full border-2 border-white"></div>
        <div class="absolute bottom-20 right-10 w-24 h-24 rounded-full border-2 border-white"></div>
      </div>

      <div class="relative z-10 px-8 py-16 lg:px-16 lg:py-20 text-center">
        <!-- Newsletter Icon -->
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-white/20 backdrop-blur-sm mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </div>

        <!-- Headline -->
        <h2 class="text-3xl lg:text-5xl font-bold text-white mb-4" style="font-family: var(--font-heading);">
          Stay Ahead of the Game
        </h2>
        
        <p class="text-xl lg:text-2xl text-white/90 mb-8 max-w-3xl mx-auto leading-relaxed">
          Get exclusive reviews, insider tips, and early access to the hottest marketing tools. Join 10,000+ smart marketers.
        </p>

        <!-- Newsletter Form -->
        <div class="max-w-md mx-auto">
          <form class="flex flex-col sm:flex-row gap-4">
            <div class="flex-1">
              <input 
                type="email" 
                placeholder="Enter your email address"
                class="w-full px-6 py-4 rounded-full text-lg border-0 focus:ring-4 focus:ring-white/30 transition-all duration-300"
                style="background: white; color: var(--text-primary);"
                required
              />
            </div>
            <button 
              type="submit"
              class="px-8 py-4 rounded-full font-bold text-lg transition-all duration-300 hover:scale-105 hover:shadow-xl whitespace-nowrap"
              style="background: var(--color-accent); color: white;"
              onmouseover="this.style.transform='scale(1.05)'"
              onmouseout="this.style.transform='scale(1)'"
            >
              Get Free Access
            </button>
          </form>
        </div>

        <!-- Trust Indicators -->
        <div class="flex flex-wrap items-center justify-center gap-8 mt-12 text-white/80">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-sm font-medium">No spam, ever</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-sm font-medium">Unsubscribe anytime</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-sm font-medium">Weekly insights</span>
          </div>
        </div>

        <!-- Social Proof -->
        <div class="mt-8 text-white/70">
          <p class="text-sm">
            Trusted by marketers at <strong class="text-white">Google</strong>, <strong class="text-white">Facebook</strong>, <strong class="text-white">HubSpot</strong> and 500+ companies
          </p>
        </div>
      </div>
    </div>
  </div>
</section>