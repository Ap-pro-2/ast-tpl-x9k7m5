---
/**
 * Dynamic Hero Section - Fully Driven by Core Logic & Settings
 * No hardcoded values, everything from settings and data
 */

import { getSiteSettings, getAllPosts } from "../../core/blogLogic";
import { getCollection } from "astro:content";

// Get all data from core logic and settings
const settings = await getSiteSettings();
const allPosts = await getAllPosts();
const allCategories = await getCollection("categories");

// Get featured posts dynamically
const featuredPosts = allPosts
  .filter(post => post.data.featured)
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);

// Fallback to latest posts if no featured posts
const displayPosts = featuredPosts.length > 0 ? featuredPosts : allPosts.slice(0, 3);

// Get categories for dynamic sections (excluding uncategorized)
const topCategories = allCategories.filter(category => category.id !== 'uncategorized').slice(0, 2);
---

<!-- Magazine-Style Tech Blog Hero -->
<section class="py-16 lg:py-24 relative overflow-hidden" style="background: var(--bg-primary);">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    
    <!-- Premium Hero Header -->
    <div class="text-center mb-16 lg:mb-20">
      <!-- Dynamic Eyebrow Text -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-6 theme-card-glass">
        <div class="w-2 h-2 rounded-full animate-pulse" style="background: var(--color-primary);"></div>
        <span class="text-caption font-semibold text-gradient uppercase tracking-wider">
          {settings.author || "Expert"} Reviews
        </span>
      </div>
      
      <!-- Main Headline -->
      <h1 class="text-display font-bold mb-4 text-gradient text-shadow-soft max-w-5xl mx-auto">
        {settings.siteTitle || `${settings.siteName} Blog`}
      </h1>
      
      <!-- Subheadline -->
      <p class="text-body-large max-w-3xl mx-auto leading-relaxed mb-8" style="color: var(--text-secondary); font-family: var(--font-body);">
        {settings.siteDescription}
      </p>
      
      <!-- Dynamic CTA Buttons -->
      {displayPosts.length > 0 && (
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href={`/blog/${displayPosts[0].id}`} class="btn-premium btn-primary">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Read Latest
          </a>
          {topCategories.length > 0 && (
            <a href={`/categories/${topCategories[0].data.slug}`} class="btn-premium btn-secondary">
              {topCategories[0].data.name}
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          )}
        </div>
      )}
    </div>

    <!-- Magazine-Style Featured Article -->
    {displayPosts[0] && (
      <div id="featured" class="mb-16 lg:mb-20">
        <article class="theme-card-elevated hover-lift group cursor-pointer">
          <a href={`/blog/${displayPosts[0].id}`} class="block">
            
            <!-- Article Header -->
            <div class="p-8 lg:p-12">
              <!-- Premium Badges -->
              <div class="flex flex-wrap items-center gap-3 mb-8">
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full theme-card-glass">
                  <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <span class="text-caption font-semibold" style="color: var(--text-secondary);">
                    {new Date(displayPosts[0].data.pubDate).toLocaleDateString("en-US", { month: "long", year: "numeric" })}
                  </span>
                </div>
                
                {displayPosts[0].data.featured && (
                  <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-yellow-400 to-orange-500 text-white">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                    <span class="text-caption font-bold uppercase tracking-wider">Featured</span>
                  </div>
                )}
              </div>

              <!-- Magazine-Style Layout -->
              <div class="grid lg:grid-cols-3 gap-12 items-start">
                
                <!-- Main Content - Takes 2 columns -->
                <div class="lg:col-span-2">
                  <h2 class="text-headline font-bold mb-6 leading-tight group-hover:text-gradient transition-all duration-300" style="color: var(--text-primary); font-family: var(--font-heading);">
                    {displayPosts[0].data.title}
                  </h2>
                  
                  {displayPosts[0].data.description && (
                    <p class="text-body-large mb-8 leading-relaxed" style="color: var(--text-secondary); font-family: var(--font-body);">
                      {displayPosts[0].data.description}
                    </p>
                  )}
                  
                  <!-- Author & Meta Info -->
                  <div class="flex items-center gap-6 text-caption" style="color: var(--text-muted);">
                    <div class="flex items-center gap-3">
                      <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold">
                        {(settings.author || "Expert").charAt(0).toUpperCase()}
                      </div>
                      <div>
                        <div class="font-semibold" style="color: var(--text-primary);">{settings.author || settings.contact?.alias || "Author"}</div>
                        <div class="text-xs">{settings.siteName} Team</div>
                      </div>
                    </div>
                    <div class="h-4 w-px" style="background: var(--border-default);"></div>
                    <div class="flex items-center gap-4">
                      <span>{new Date(displayPosts[0].data.pubDate).toLocaleDateString("en-US", { month: "short", day: "numeric" })}</span>
                      <span>â€¢</span>
                      <span>5 min read</span>
                    </div>
                  </div>
                </div>

                <!-- Sidebar Visual - Takes 1 column -->
                <div class="flex justify-center lg:justify-end">
                  <div class="relative group/visual">
                    <!-- Main Visual Element -->
                    <div class="w-48 h-48 lg:w-56 lg:h-56 theme-card-glass flex items-center justify-center group-hover/visual:scale-105 transition-transform duration-500">
                      <div class="text-center">
                        <svg class="w-20 h-20 lg:w-24 lg:h-24 mx-auto mb-4 text-gradient" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                        </svg>
                        <div class="text-caption font-bold text-gradient uppercase tracking-wider">{settings.siteName} Review</div>
                      </div>
                    </div>
                    
                    <!-- Floating Decorative Elements -->
                    <div class="absolute -top-3 -right-3 w-8 h-8 rounded-full bg-gradient-to-br from-pink-400 to-red-500 animate-pulse"></div>
                    <div class="absolute -bottom-3 -left-3 w-6 h-6 rounded-full bg-gradient-to-br from-blue-400 to-cyan-500 animate-pulse" style="animation-delay: 0.5s;"></div>
                    <div class="absolute top-1/2 -left-6 w-4 h-4 rounded-full bg-gradient-to-br from-green-400 to-emerald-500 animate-pulse" style="animation-delay: 1s;"></div>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </article>
      </div>
    )}

    <!-- Magazine-Style Category Showcase -->
    <div class="grid lg:grid-cols-2 gap-12">
      {topCategories.map((category) => {
        // Filter posts that actually belong to this category
        const categoryPosts = allPosts.filter(post => {
          const postCategoryId = typeof post.data.category === 'string' ? post.data.category : post.data.category?.id;
          return postCategoryId === category.id;
        }).slice(0, 1); // Get just 1 post per category
        
        return categoryPosts.length > 0 ? (
          <div class="group">
            <!-- Category Header -->
            <div class="flex items-center justify-between mb-8">
              <div class="flex items-center gap-3">
                <div class="w-3 h-3 rounded-full bg-gradient-to-r from-blue-500 to-purple-600"></div>
                <h3 class="text-subheadline font-bold text-gradient uppercase tracking-wider">
                  {category.data.name}
                </h3>
              </div>
              <a href={`/categories/${category.data.slug}`} class="text-caption font-semibold hover:text-gradient transition-all duration-300 flex items-center gap-1" style="color: var(--color-primary);">
                View All
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
            
            {categoryPosts.map((post) => (
              <article class="theme-card hover-lift group/card cursor-pointer h-full">
                <a href={`/blog/${post.id}`} class="block p-8 h-full flex flex-col">
                  
                  <!-- Premium Tags -->
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-6">
                      {post.data.tags.slice(0, 3).map((tag) => (
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold theme-card-glass" style="color: var(--text-secondary);">
                          {typeof tag === 'string' ? tag : tag.id}
                        </span>
                      ))}
                    </div>
                  )}

                  <!-- Article Title -->
                  <h4 class="text-headline font-bold mb-4 leading-tight group-hover/card:text-gradient transition-all duration-300" style="color: var(--text-primary); font-family: var(--font-heading);">
                    {post.data.title}
                  </h4>

                  <!-- Description -->
                  {post.data.description && (
                    <p class="text-body mb-6 leading-relaxed line-clamp-3" style="color: var(--text-secondary); font-family: var(--font-body);">
                      {post.data.description}
                    </p>
                  )}

                  <!-- Enhanced Meta Info -->
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-4 text-caption" style="color: var(--text-muted);">
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span>{new Date(post.data.pubDate).toLocaleDateString("en-US", { month: "short", day: "numeric", year: "numeric" })}</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>5 min read</span>
                      </div>
                    </div>
                    
                    <!-- Read More Arrow -->
                    <div class="flex items-center gap-2 text-caption font-semibold group-hover/card:text-gradient transition-all duration-300" style="color: var(--color-primary);">
                      <span>Read More</span>
                      <svg class="w-4 h-4 group-hover/card:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                      </svg>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : null;
      })}
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

