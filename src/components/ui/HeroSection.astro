---
/**
 * Dynamic Hero Section - Fully Driven by Core Logic & Settings
 * No hardcoded values, everything from settings and data
 */

import { getSiteSettings, getAllPosts } from "../../core/blogLogic";
import { getCollection } from "astro:content";

// Get all data from core logic and settings
const settings = await getSiteSettings();
const allPosts = await getAllPosts();
const allCategories = await getCollection("categories");

// Get featured posts dynamically
const featuredPosts = allPosts
  .filter(post => post.data.featured)
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);

// Fallback to latest posts if no featured posts
const displayPosts = featuredPosts.length > 0 ? featuredPosts : allPosts.slice(0, 3);

// Get categories for dynamic sections (excluding uncategorized)
const topCategories = allCategories.filter(category => category.id !== 'uncategorized').slice(0, 2);
---

<!-- Mobile-Optimized Magazine-Style Tech Blog Hero -->
<section class="relative overflow-hidden" 
         style="background: var(--bg-primary); padding: var(--space-xl) 0 var(--space-3xl) 0;">
  
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5" 
       style="background-image: radial-gradient(circle at 25% 25%, var(--color-primary) 0%, transparent 50%), 
                               radial-gradient(circle at 75% 75%, var(--color-accent) 0%, transparent 50%);"></div>
  
  <div class="max-w-7xl mx-auto relative z-10 px-4 sm:px-6 lg:px-8">
    
    <!-- Mobile-Optimized Hero Header -->
    <div class="text-center stagger-children mb-8 sm:mb-12 lg:mb-16">
      
      <!-- Dynamic Eyebrow Text - Mobile Optimized -->
      <div class="inline-flex items-center gap-2 rounded-full mb-4 sm:mb-6 transition-all duration-300 hover:scale-105"
           style="padding: var(--space-xs) var(--space-md); 
                  background: var(--surface-floating); 
                  border: 1px solid var(--border-light);
                  backdrop-filter: blur(20px);
                  box-shadow: var(--shadow-sm);">
        <div class="w-2 h-2 rounded-full animate-pulse" style="background: var(--color-success);"></div>
        <span class="font-semibold text-gradient uppercase tracking-wider text-xs sm:text-sm">
          {settings.author || "Expert"} Reviews
        </span>
      </div>
      
      <!-- Mobile-Optimized Main Headline -->
      <h1 class="text-gradient text-shadow-soft max-w-5xl mx-auto text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold leading-tight mb-4 sm:mb-6"
          style="font-family: var(--font-heading);">
        {settings.siteTitle || `${settings.siteName} Blog`}
      </h1>
      
      <!-- Mobile-Optimized Subheadline -->
      <p class="max-w-3xl mx-auto mb-6 sm:mb-8 text-sm sm:text-base lg:text-lg leading-relaxed px-4 sm:px-0" 
         style="color: var(--text-secondary); 
                font-family: var(--font-body);">
        {settings.siteDescription}
      </p>
      
      <!-- Mobile-Optimized CTA Buttons -->
      {displayPosts.length > 0 && (
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center px-4 sm:px-0">
          <a href={`/blog/${displayPosts[0].id}`} 
             class="w-full sm:w-auto inline-flex items-center justify-center gap-3 font-semibold rounded-xl transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-4 text-sm sm:text-base"
             style="padding: var(--space-sm) var(--space-lg);
                    background: var(--color-primary);
                    color: var(--bg-primary);
                    box-shadow: var(--shadow-md);
                    focus-ring-color: var(--state-focus);"
             onmouseover="this.style.background='var(--color-primary-accessible)'; this.style.transform='translateY(-2px) scale(1.05)'; this.style.boxShadow='var(--shadow-lg)';"
             onmouseout="this.style.background='var(--color-primary)'; this.style.transform='scale(1)'; this.style.boxShadow='var(--shadow-md)';">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Read Latest
          </a>
          {topCategories.length > 0 && (
            <a href={`/categories/${topCategories[0].data.slug}`} 
               class="w-full sm:w-auto inline-flex items-center justify-center gap-3 font-semibold rounded-xl transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-4 text-sm sm:text-base"
               style="padding: var(--space-sm) var(--space-lg);
                      background: var(--surface-raised);
                      color: var(--text-primary);
                      border: 2px solid var(--border-default);
                      box-shadow: var(--shadow-sm);
                      focus-ring-color: var(--state-focus);"
               onmouseover="this.style.background='var(--state-hover)'; this.style.borderColor='var(--color-primary)'; this.style.transform='translateY(-2px) scale(1.05)'; this.style.boxShadow='var(--shadow-md)';"
               onmouseout="this.style.background='var(--surface-raised)'; this.style.borderColor='var(--border-default)'; this.style.transform='scale(1)'; this.style.boxShadow='var(--shadow-sm)';">
              {topCategories[0].data.name}
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          )}
        </div>
      )}
    </div>

    <!-- Mobile-Optimized Featured Article -->
    {displayPosts[0] && (
      <div id="featured" class="mb-8 sm:mb-12 lg:mb-16">
        <article class="group cursor-pointer rounded-xl overflow-hidden transition-all duration-500 sm:hover:scale-[1.02]"
                 style="background: var(--surface-raised);
                        border: 1px solid var(--border-light);
                        box-shadow: var(--shadow-lg);
                        transition: all var(--animation-duration) var(--animation-easing);"
                 onmouseover="this.style.boxShadow='var(--shadow-xl)'; this.style.borderColor='var(--color-primary)'; this.style.background='var(--surface-floating)';"
                 onmouseout="this.style.boxShadow='var(--shadow-lg)'; this.style.borderColor='var(--border-light)'; this.style.background='var(--surface-raised)';">
          <a href={`/blog/${displayPosts[0].id}`} class="block">
            
            <!-- Mobile-Optimized Article Header -->
            <div class="p-4 sm:p-6 lg:p-8">
              <!-- Mobile-Optimized Premium Badges -->
              <div class="flex flex-wrap items-center gap-2 sm:gap-3 mb-4 sm:mb-6">
                <div class="inline-flex items-center rounded-full transition-all duration-300 hover:scale-105"
                     style="padding: var(--space-xs) var(--space-sm);
                            gap: var(--space-xs);
                            background: var(--surface-floating);
                            border: 1px solid var(--border-light);
                            backdrop-filter: blur(20px);">
                  <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: var(--color-info);">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <span class="font-semibold text-xs sm:text-sm" 
                        style="color: var(--text-secondary);">
                    {new Date(displayPosts[0].data.pubDate).toLocaleDateString("en-US", { month: "long", year: "numeric" })}
                  </span>
                </div>
                
                {displayPosts[0].data.featured && (
                  <div class="inline-flex items-center rounded-full transition-all duration-300 hover:scale-105"
                       style="padding: var(--space-xs) var(--space-sm);
                              gap: var(--space-xs);
                              background: var(--color-warning);
                              color: var(--bg-primary);
                              box-shadow: var(--shadow-md);">
                    <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                    <span class="font-bold uppercase tracking-wider text-xs" 
                          style="font-size: var(--text-fluid-xs);">Featured</span>
                  </div>
                )}
              </div>

              <!-- Mobile-First Layout -->
              <div class="space-y-6 lg:grid lg:grid-cols-3 lg:gap-8 lg:space-y-0 lg:items-start">
                
                <!-- Main Content -->
                <div class="lg:col-span-2 space-y-4 sm:space-y-6">
                  <h2 class="text-xl sm:text-2xl lg:text-3xl xl:text-4xl font-bold leading-tight group-hover:text-gradient transition-all duration-300" 
                      style="color: var(--text-primary); font-family: var(--font-heading);">
                    {displayPosts[0].data.title}
                  </h2>
                  
                  {displayPosts[0].data.description && (
                    <p class="text-sm sm:text-base lg:text-lg leading-relaxed" 
                       style="color: var(--text-secondary); font-family: var(--font-body);">
                      {displayPosts[0].data.description}
                    </p>
                  )}
                  
                  <!-- Mobile-Optimized Author & Meta Info -->
                  <div class="flex flex-col sm:flex-row sm:items-center gap-4 sm:gap-6 text-sm" 
                       style="color: var(--text-muted);">
                    <div class="flex items-center gap-3">
                      <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold text-sm sm:text-base">
                        {(settings.author || "Expert").charAt(0).toUpperCase()}
                      </div>
                      <div>
                        <div class="font-semibold text-sm sm:text-base" style="color: var(--text-primary);">
                          {settings.author || settings.contact?.alias || "Author"}
                        </div>
                        <div class="text-xs sm:text-sm">{settings.siteName} Team</div>
                      </div>
                    </div>
                    <div class="hidden sm:block h-4 w-px" style="background: var(--border-default);"></div>
                    <div class="flex items-center gap-3 sm:gap-4 text-xs sm:text-sm">
                      <span>{new Date(displayPosts[0].data.pubDate).toLocaleDateString("en-US", { month: "short", day: "numeric" })}</span>
                      <span>•</span>
                      <span>5 min read</span>
                    </div>
                  </div>
                </div>

                <!-- Mobile-Optimized Visual Element -->
                <div class="flex justify-center lg:justify-end">
                  <div class="relative group/visual">
                    <!-- Responsive Visual Element -->
                    <div class="w-32 h-32 sm:w-40 sm:h-40 lg:w-48 lg:h-48 xl:w-56 xl:h-56 rounded-xl flex items-center justify-center group-hover/visual:scale-105 transition-transform duration-500"
                         style="background: var(--surface-floating);
                                border: 1px solid var(--border-light);
                                backdrop-filter: blur(20px);
                                box-shadow: var(--shadow-md);">
                      <div class="text-center">
                        <svg class="w-12 h-12 sm:w-16 sm:h-16 lg:w-20 lg:h-20 xl:w-24 xl:h-24 mx-auto mb-2 sm:mb-4 text-gradient" 
                             fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                                d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                        </svg>
                        <div class="text-xs sm:text-sm font-bold text-gradient uppercase tracking-wider">
                          {settings.siteName} Review
                        </div>
                      </div>
                    </div>
                    
                    <!-- Responsive Floating Decorative Elements -->
                    <div class="absolute -top-2 -right-2 w-4 h-4 sm:w-6 sm:h-6 lg:w-8 lg:h-8 rounded-full bg-gradient-to-br from-pink-400 to-red-500 animate-pulse"></div>
                    <div class="absolute -bottom-2 -left-2 w-3 h-3 sm:w-4 sm:h-4 lg:w-6 lg:h-6 rounded-full bg-gradient-to-br from-blue-400 to-cyan-500 animate-pulse" style="animation-delay: 0.5s;"></div>
                    <div class="absolute top-1/2 -left-3 sm:-left-4 lg:-left-6 w-2 h-2 sm:w-3 sm:h-3 lg:w-4 lg:h-4 rounded-full bg-gradient-to-br from-green-400 to-emerald-500 animate-pulse" style="animation-delay: 1s;"></div>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </article>
      </div>
    )}

    <!-- Mobile-Optimized Category Showcase -->
    <div class="grid gap-6 sm:gap-8 lg:grid-cols-2 lg:gap-12">
      {topCategories.map((category) => {
        // Filter posts that actually belong to this category
        const categoryPosts = allPosts.filter(post => {
          const postCategoryId = typeof post.data.category === 'string' ? post.data.category : post.data.category?.id;
          return postCategoryId === category.id;
        }).slice(0, 1); // Get just 1 post per category
        
        return categoryPosts.length > 0 ? (
          <div class="group">
            <!-- Mobile-Optimized Category Header -->
            <div class="flex items-center justify-between mb-4 sm:mb-6">
              <div class="flex items-center gap-2 sm:gap-3">
                <div class="w-2 h-2 sm:w-3 sm:h-3 rounded-full" style="background: var(--color-primary);"></div>
                <h3 class="font-bold text-gradient uppercase tracking-wider text-sm sm:text-base lg:text-lg"
                    style="font-family: var(--font-heading);">
                  {category.data.name}
                </h3>
              </div>
              <a href={`/categories/${category.data.slug}`} 
                 class="font-semibold hover:text-gradient transition-all duration-300 flex items-center gap-1 sm:gap-2 text-xs sm:text-sm"
                 style="color: var(--color-primary);"
                 onmouseover="this.style.color='var(--color-primary-accessible)'; this.style.transform='translateX(2px)';"
                 onmouseout="this.style.color='var(--color-primary)'; this.style.transform='translateX(0)';">
                View All
                <svg class="w-3 h-3 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
            
            {categoryPosts.map((post) => (
              <article class="group/card cursor-pointer h-full rounded-xl overflow-hidden transition-all duration-500 sm:hover:scale-[1.02]"
                       style="background: var(--surface-raised);
                              border: 1px solid var(--border-light);
                              box-shadow: var(--shadow-md);
                              transition: all var(--animation-duration) var(--animation-easing);"
                       onmouseover="this.style.transform='translateY(-4px) scale(1.02)'; this.style.boxShadow='var(--shadow-xl)'; this.style.borderColor='var(--color-primary)'; this.style.background='var(--surface-floating)';"
                       onmouseout="this.style.transform='translateY(0) scale(1)'; this.style.boxShadow='var(--shadow-md)'; this.style.borderColor='var(--border-light)'; this.style.background='var(--surface-raised)';">
                <a href={`/blog/${post.id}`} class="block h-full flex flex-col p-4 sm:p-6 lg:p-8">
                  
                  <!-- Mobile-Optimized Premium Tags -->
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-1 sm:gap-2 mb-4 sm:mb-6">
                      {post.data.tags.slice(0, 3).map((tag) => (
                        <span class="inline-flex items-center rounded-full font-semibold transition-all duration-300 hover:scale-105 text-xs"
                              style="padding: var(--space-xs) var(--space-sm);
                                     background: var(--surface-sunken);
                                     color: var(--text-secondary);
                                     border: 1px solid var(--border-light);">
                          {typeof tag === 'string' ? tag : tag.id}
                        </span>
                      ))}
                    </div>
                  )}

                  <!-- Mobile-Optimized Article Title -->
                  <h4 class="font-bold leading-tight group-hover/card:text-gradient transition-all duration-300 flex-grow text-lg sm:text-xl lg:text-2xl mb-3 sm:mb-4"
                      style="color: var(--text-primary); 
                             font-family: var(--font-heading);
                             line-height: var(--leading-tight);">
                    {post.data.title}
                  </h4>

                  <!-- Mobile-Optimized Description -->
                  {post.data.description && (
                    <p class="leading-relaxed line-clamp-3 flex-grow text-sm sm:text-base mb-4 sm:mb-6" 
                       style="color: var(--text-secondary); 
                              font-family: var(--font-body);
                              line-height: var(--leading-relaxed);">
                      {post.data.description}
                    </p>
                  )}

                  <!-- Mobile-Optimized Meta Info -->
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-4">
                    <div class="flex items-center gap-3 sm:gap-4 text-xs sm:text-sm" style="color: var(--text-muted);">
                      <div class="flex items-center transition-colors duration-300 hover:text-info gap-1 sm:gap-2">
                        <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: var(--color-info);">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span>
                          {new Date(post.data.pubDate).toLocaleDateString("en-US", { month: "short", day: "numeric", year: "numeric" })}
                        </span>
                      </div>
                      <div class="flex items-center transition-colors duration-300 hover:text-success gap-1 sm:gap-2">
                        <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: var(--color-success);">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>5 min read</span>
                      </div>
                    </div>
                    
                    <!-- Mobile-Optimized Read More Arrow -->
                    <div class="flex items-center font-semibold group-hover/card:text-gradient transition-all duration-300 gap-1 sm:gap-2 text-xs sm:text-sm"
                         style="color: var(--color-primary);">
                      <span>Read More</span>
                      <svg class="w-3 h-3 sm:w-4 sm:h-4 group-hover/card:translate-x-1 transition-transform duration-300" 
                           fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                      </svg>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : null;
      })}
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

