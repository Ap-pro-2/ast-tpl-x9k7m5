---
/**
 * Horizontal Author Card - Professional Post Layout
 * Clean horizontal design following our established UI design system
 */

import { getEntry } from 'astro:content';

interface Props {
  authorId: string;
}

const { authorId } = Astro.props;

// Get author data
let author = null;
try {
  if (authorId) {
    author = await getEntry('authors', authorId);
  }
} catch (error) {
  console.warn('Could not load author:', error);
}

// Don't render if no author found
if (!author) return null;
---

<!-- Horizontal Author Card - Professional Design -->
<div class="theme-card p-6 lg:p-8">
  
  <!-- Header Section -->
  <div class="flex items-center gap-3 mb-6">
    <div class="w-1 h-6" style="background: var(--color-primary-accessible); border-radius: var(--radius-full)"></div>
    <h3 class="text-xl font-bold" style="color: var(--text-primary); font-family: var(--font-heading)">
      About the Author
    </h3>
  </div>
  
  <!-- Horizontal Author Layout -->
  <div class="flex flex-col sm:flex-row items-start gap-6">
    
    <!-- Author Avatar -->
    <div class="flex-shrink-0">
      {author.data.avatar ? (
        <div class="relative group">
          <img 
            src={author.data.avatar} 
            alt={`${author.data.name} - Author`}
            class="w-20 h-20 sm:w-24 sm:h-24 object-cover transition-all duration-500 group-hover:scale-105"
            style="border-radius: var(--radius-full); box-shadow: 0 4px 16px rgba(0,0,0,0.1)"
          />
          <!-- Hover Ring Effect -->
          <div 
            class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
            style="border: 3px solid var(--color-primary-accessible); border-radius: var(--radius-full);"
          ></div>
        </div>
      ) : (
        <div 
          class="w-20 h-20 sm:w-24 sm:h-24 text-white flex items-center justify-center text-2xl font-bold transition-transform duration-500 hover:scale-105"
          style="background: linear-gradient(135deg, var(--color-primary-accessible), var(--color-primary-accessible-dark)); border-radius: var(--radius-full); box-shadow: 0 4px 16px rgba(0,0,0,0.1)"
        >
          {author.data.name.charAt(0)}
        </div>
      )}
    </div>
    
    <!-- Author Information -->
    <div class="flex-1 min-w-0">
      
      <!-- Author Name -->
      <h4 class="text-xl lg:text-2xl font-bold mb-3" style="color: var(--text-primary); font-family: var(--font-heading)">
        {author.data.name}
      </h4>
      
      <!-- Author Bio -->
      <p class="text-base leading-relaxed mb-6" style="color: var(--text-secondary); font-family: var(--font-body)">
        {author.data.bio || 'Author and blogger sharing stories and insights. Passionate about exploring topics and sharing knowledge with the community.'}
      </p>
      
      <!-- Author Links & Actions -->
      <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4">
        
        <!-- View Profile Button -->
        <a 
          href={`/authors/${author.data.slug}`}
          class="btn-accessible-primary px-6 py-3"
          aria-label={`View ${author.data.name}'s profile and all articles`}
        >
          <span>View Profile</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        <!-- Social Links (if available) -->
        <div class="flex items-center gap-3">
          {author.data.twitter && (
            <a 
              href={author.data.twitter.startsWith('http') ? author.data.twitter : `https://twitter.com/${author.data.twitter}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center transition-all duration-300 hover:shadow-md"
              style="background: var(--bg-tertiary); color: var(--text-muted); border-radius: var(--radius-full); border: 1px solid var(--border-light); transition: all var(--animation-duration) var(--animation-easing)"
              onmouseover="this.style.background='var(--color-primary-accessible)'; this.style.color='var(--bg-primary)'; this.style.transform='translateY(-2px)'"
              onmouseout="this.style.background='var(--bg-tertiary)'; this.style.color='var(--text-muted)'; this.style.transform='translateY(0)'"
              aria-label={`Follow ${author.data.name} on Twitter`}
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          )}
          
          {author.data.github && (
            <a 
              href={author.data.github.startsWith('http') ? author.data.github : `https://github.com/${author.data.github}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center transition-all duration-300 hover:shadow-md"
              style="background: var(--bg-tertiary); color: var(--text-muted); border-radius: var(--radius-full); border: 1px solid var(--border-light); transition: all var(--animation-duration) var(--animation-easing)"
              onmouseover="this.style.background='var(--text-primary)'; this.style.color='var(--bg-primary)'; this.style.transform='translateY(-2px)'"
              onmouseout="this.style.background='var(--bg-tertiary)'; this.style.color='var(--text-muted)'; this.style.transform='translateY(0)'"
              aria-label={`View ${author.data.name}'s GitHub profile`}
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          )}
          
          {author.data.website && (
            <a 
              href={author.data.website}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center transition-all duration-300 hover:shadow-md"
              style="background: var(--bg-tertiary); color: var(--text-muted); border-radius: var(--radius-full); border: 1px solid var(--border-light); transition: all var(--animation-duration) var(--animation-easing)"
              onmouseover="this.style.background='var(--color-primary-accessible)'; this.style.color='white'; this.style.transform='translateY(-2px)'"
              onmouseout="this.style.background='var(--bg-tertiary)'; this.style.color='var(--text-muted)'; this.style.transform='translateY(0)'"
              aria-label={`Visit ${author.data.name}'s website`}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</div>