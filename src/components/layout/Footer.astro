---
/**
 * Clean Footer Component - Ready for Custom Styling
 * All logic preserved, styles stripped for fresh start
 */

import { getSiteSettings } from "../../core/blogLogic";

// Get site settings using blog logic
const settings = await getSiteSettings();
const currentYear = new Date().getFullYear();
---

<!-- Clean Footer with Theme System -->
<footer class="mt-20" style="background: var(--bg-secondary); border-top: 1px solid var(--border-default);">
  <div class="max-w-7xl mx-auto px-4">
    <div class="py-16">
      
      <!-- Footer Content -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
        
        <!-- Brand Section -->
        <div class="lg:col-span-2">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-8 h-8 rounded-lg flex items-center justify-center text-white" 
                 style="background: var(--color-primary);">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold" style="color: var(--text-primary);">
              {settings.siteName}
            </h3>
          </div>
          <p class="max-w-md leading-relaxed" style="color: var(--text-secondary);">
            {settings.siteDescription}
          </p>
        </div>
        
        <!-- Navigation Links -->
        <div>
          <h4 class="text-sm font-bold uppercase tracking-wider mb-6" style="color: var(--text-primary);">Navigation</h4>
          <ul class="space-y-4">
            <li><a href="/" class="transition-colors" style="color: var(--text-secondary); transition: color var(--animation-duration) var(--animation-easing);" onmouseover="this.style.color='var(--color-primary)';" onmouseout="this.style.color='var(--text-secondary)';" aria-label="Go to homepage">Home</a></li>
            <li><a href="/blog" class="transition-colors" style="color: var(--text-secondary); transition: color var(--animation-duration) var(--animation-easing);" onmouseover="this.style.color='var(--color-primary)';" onmouseout="this.style.color='var(--text-secondary)';" aria-label="View all blog articles">Articles</a></li>
            <li><a href="/categories" class="transition-colors" style="color: var(--text-secondary); transition: color var(--animation-duration) var(--animation-easing);" onmouseover="this.style.color='var(--color-primary)';" onmouseout="this.style.color='var(--text-secondary)';" aria-label="Browse blog categories">Categories</a></li>
            <li><a href="/authors" class="transition-colors" style="color: var(--text-secondary); transition: color var(--animation-duration) var(--animation-easing);" onmouseover="this.style.color='var(--color-primary)';" onmouseout="this.style.color='var(--text-secondary)';" aria-label="View all blog authors">Authors</a></li>
            <li><a href="/tags" class="transition-colors" style="color: var(--text-secondary); transition: color var(--animation-duration) var(--animation-easing);" onmouseover="this.style.color='var(--color-primary)';" onmouseout="this.style.color='var(--text-secondary)';" aria-label="Browse blog tags">Tags</a></li>
          </ul>
        </div>
        
        <!-- Legal Links -->
        <div>
          <h4 class="text-sm font-bold uppercase tracking-wider mb-6" style="color: var(--text-primary);">Legal</h4>
          <ul class="space-y-4">
            <li><a href="/legal/privacy" class="transition-colors" style="color: var(--text-secondary); transition: color var(--animation-duration) var(--animation-easing);" onmouseover="this.style.color='var(--color-primary)';" onmouseout="this.style.color='var(--text-secondary)';" aria-label="Read our privacy policy">Privacy Policy</a></li>
            <li><a href="/legal/terms" class="transition-colors" style="color: var(--text-secondary); transition: color var(--animation-duration) var(--animation-easing);" onmouseover="this.style.color='var(--color-primary)';" onmouseout="this.style.color='var(--text-secondary)';" aria-label="Read our terms of service">Terms of Service</a></li>
            <li><a href="/sitemap" class="transition-colors" style="color: var(--text-secondary); transition: color var(--animation-duration) var(--animation-easing);" onmouseover="this.style.color='var(--color-primary)';" onmouseout="this.style.color='var(--text-secondary)';" aria-label="View site sitemap">Sitemap</a></li>
            <li><a href="/rss.xml" class="transition-colors" style="color: var(--text-secondary); transition: color var(--animation-duration) var(--animation-easing);" onmouseover="this.style.color='var(--color-primary)';" onmouseout="this.style.color='var(--text-secondary)';" aria-label="Subscribe to RSS feed">RSS Feed</a></li>
          </ul>
        </div>
      </div>
      
      <!-- Footer Bottom -->
      <div class="pt-8" style="border-top: 1px solid var(--border-default);">
        <div class="flex flex-col lg:flex-row items-center justify-between gap-4">
          <p class="text-sm" style="color: var(--text-muted);">
            Â© {currentYear} {settings.siteName}. All rights reserved.
          </p>
          
          <!-- Social Links -->
          <div class="flex items-center gap-4">
            <span class="text-xs font-medium uppercase tracking-wider" style="color: var(--text-muted);">Follow Us</span>
            <div class="flex gap-3">
              <a href="#" class="w-8 h-8 rounded-full flex items-center justify-center transition-colors" 
                 style="background: var(--bg-tertiary); color: var(--text-secondary); transition: all var(--animation-duration) var(--animation-easing);"
                 onmouseover="this.style.background='var(--color-primary)'; this.style.color='white';"
                 onmouseout="this.style.background='var(--bg-tertiary)'; this.style.color='var(--text-secondary)';"
                 aria-label="Twitter">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
              <a href="#" class="w-8 h-8 rounded-full flex items-center justify-center transition-colors" 
                 style="background: var(--bg-tertiary); color: var(--text-secondary); transition: all var(--animation-duration) var(--animation-easing);"
                 onmouseover="this.style.background='var(--color-primary)'; this.style.color='white';"
                 onmouseout="this.style.background='var(--bg-tertiary)'; this.style.color='var(--text-secondary)';"
                 aria-label="GitHub">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>