---
/**
 * ProductCard6 - "Comparison Winner" Layout
 * Shows why this product beats competitors
 */

import OptimizedImage from './ui/OptimizedImage.astro';

export interface Props {
  title: string;
  description: string;
  price: string;
  originalPrice?: string;
  image: string;
  imageAlt: string;
  affiliateUrl: string;
  rating?: number;
  reviewCount?: number;
  brand?: string;
  features?: string[];
  pros?: string[];
  cons?: string[];
  badge?: string;
  buttonText?: string;
}

const {
  title,
  description,
  price,
  originalPrice,
  image,
  imageAlt,
  affiliateUrl,
  rating,
  reviewCount,
  brand,
  features,
  pros,
  cons,
  badge,
  buttonText,
} = Astro.props;

const discountPercent =
  originalPrice && price
    ? Math.round(
        ((parseFloat(originalPrice.replace("$", "")) -
          parseFloat(price.replace("$", ""))) /
          parseFloat(originalPrice.replace("$", ""))) *
          100,
      )
    : null;
---

<!-- Comparison Winner Layout -->
<article class="theme-card mb-8 relative overflow-hidden">
  <!-- Badge -->
  {badge && (
    <div class="absolute top-0 left-0 z-10">
      <div class="text-white text-sm font-bold px-6 py-2 transform -rotate-45 -translate-x-4 -translate-y-2" style="background: linear-gradient(45deg, var(--color-primary), var(--color-accent));">
        {badge}
      </div>
    </div>
  )}

  <div style="padding: var(--card-padding);">
    <!-- Header Section -->
    <div class="flex flex-col md:flex-row gap-6 mb-6">
      <!-- Product Image -->
      <div class="md:w-1/3">
        <OptimizedImage
          src={image}
          alt={imageAlt}
          width={400}
          height={192}
          class="w-full h-48 object-cover"
          style="border-radius: var(--radius-lg);"
          loading="lazy"
        />
      </div>

      <!-- Product Info -->
      <div class="md:w-2/3">
        <!-- Title -->
        <h3 class="text-2xl font-bold mb-2" style="color: var(--text-primary); font-family: var(--font-heading);">
          {title}
        </h3>

        <!-- Brand -->
        {brand && (
          <p class="text-sm font-medium mb-3" style="color: var(--color-primary-accessible);">
            by {brand}
          </p>
        )}

        <!-- Rating & Reviews -->
        {rating && (
          <div class="flex items-center gap-3 mb-4">
            <div class="flex">
              {Array.from({ length: 5 }, (_, i) => (
                <svg
                  class={`w-5 h-5 ${i < Math.floor(rating) ? "text-yellow-400" : "text-gray-300"}`}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <span class="text-lg font-bold" style="color: var(--text-primary);">
              {rating}/5
            </span>
            {reviewCount && (
              <span class="text-sm" style="color: var(--text-muted-accessible);">
                ({reviewCount} reviews)
              </span>
            )}
          </div>
        )}

        <!-- Price -->
        <div class="flex items-baseline gap-3">
          {price && (
            <span class="text-3xl font-bold" style="color: var(--color-primary-accessible); font-family: var(--font-heading);">
              {price}
            </span>
          )}
          {originalPrice && (
            <span class="text-xl line-through" style="color: var(--text-muted-accessible);">
              {originalPrice}
            </span>
          )}
          {discountPercent && (
            <span class="bg-red-500 text-white text-sm font-bold px-2 py-1" style="border-radius: var(--radius-md);">
              -{discountPercent}%
            </span>
          )}
        </div>
      </div>
    </div>

    <!-- Description -->
    <p class="leading-relaxed mb-6" style="color: var(--text-secondary);">
      {description}
    </p>

    <!-- Why This Wins Section -->
    {pros && pros.length > 0 && (
      <div class="mb-6 p-4" style="background: color-mix(in srgb, var(--color-primary-accessible) 5%, transparent); border-radius: var(--radius-lg); border-left: 4px solid var(--color-primary-accessible);">
        <h4 class="font-bold mb-3 text-green-700">
          Pros:
        </h4>
        <ul class="space-y-2">
          {pros.slice(0, 3).map((pro) => (
            <li class="flex items-start text-green-800">
              <svg class="w-4 h-4 mr-2 flex-shrink-0 mt-0.5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium">{pro}</span>
            </li>
          ))}
        </ul>
      </div>
    )}

    <!-- Key Features -->
    {features && features.length > 0 && (
      <div class="mb-6">
        <h4 class="font-semibold mb-3" style="color: var(--text-primary);">
          Key Features:
        </h4>
        <div class="grid md:grid-cols-2 gap-2">
          {features.slice(0, 4).map((feature) => (
            <div class="flex items-center text-sm" style="color: var(--text-secondary);">
              <svg class="w-3 h-3 mr-2" style="color: var(--color-primary-accessible);" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              {feature}
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Strong CTA -->
    <div class="text-center">
      <a
        href={affiliateUrl}
        target="_blank"
        rel="noopener noreferrer sponsored"
        class="theme-button-primary inline-flex items-center gap-3 px-8 py-4 text-lg font-bold"
        style="color: white; border-radius: var(--radius-lg);"
      >
        <span>{buttonText || "View Deal"}</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
      {rating && reviewCount && (
        <p class="text-xs mt-2" style="color: var(--text-muted-accessible);">
          ‚≠ê Rated {rating}/5 by {reviewCount}+ customers
        </p>
      )}
    </div>
  </div>
</article>