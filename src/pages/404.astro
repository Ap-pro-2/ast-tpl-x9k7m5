---
/**
 * 404 Error Page - Page Not Found
 * Matches the site's design patterns and theme system
 */

import BaseLayout from "../layouts/BaseLayout.astro";
import { getSiteSettings } from "../core/blogLogic";

// Get site settings for consistent branding
const settings = await getSiteSettings();

// SEO data for 404 page
const seoData = {
  pageTitle: "Page Not Found",
  description:
    "The page you're looking for doesn't exist. Explore our latest articles and content instead.",
};
---

<BaseLayout
  pageTitle={seoData.pageTitle}
  description={seoData.description}
  noindex={true}
>
  {
    settings.imageDomain && (
      <link rel="preconnect" href={settings.imageDomain} slot="head" />
    )
  }

  <!-- 404 Hero Section -->
  <section class="py-16 lg:py-20" style="background: var(--bg-secondary);">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center">
        <!-- Error Badge -->
        <div
          class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-6"
          style="background: var(--bg-tertiary); color: var(--color-primary); border: 1px solid var(--border-accent);"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
              clip-rule="evenodd"></path>
          </svg>
          <span class="text-sm font-semibold">Error 404</span>
        </div>

        <!-- Main Error Display -->
        <h1
          class="text-6xl lg:text-7xl xl:text-8xl font-bold mb-6 tracking-tight"
          style="color: var(--color-primary);"
        >
          404
        </h1>

        <h2
          class="text-2xl lg:text-3xl xl:text-4xl font-bold mb-6 tracking-tight"
          style="color: var(--text-primary);"
        >
          Page Not Found
        </h2>

        <p
          class="text-lg lg:text-xl max-w-3xl mx-auto mb-12 leading-relaxed"
          style="color: var(--text-secondary);"
        >
          The page you're looking for doesn't exist. It might have been moved,
          deleted, or you entered the wrong URL.
        </p>

        <!-- Action Buttons -->
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16"
        >
          <!-- Primary CTA -->
          <a
            href="/"
            class="inline-flex items-center gap-3 px-8 py-4 text-lg font-semibold text-white rounded-xl shadow-md hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
            style="background: var(--color-primary); transition: all var(--animation-duration) var(--animation-easing);"
            onmouseover="this.style.background='var(--color-primary-dark)';"
            onmouseout="this.style.background='var(--color-primary)';"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
              ></path>
            </svg>
            <span>Go Home</span>
          </a>

          <!-- Secondary CTA -->
          <a
            href="/blog"
            class="inline-flex items-center gap-3 px-8 py-4 text-lg font-semibold rounded-xl hover:shadow-md hover:-translate-y-1 transition-all duration-300"
            style="background: var(--surface-card); color: var(--text-secondary); border: 2px solid var(--border-default); transition: all var(--animation-duration) var(--animation-easing);"
            onmouseover="this.style.borderColor='var(--border-accent)'; this.style.color='var(--text-primary)';"
            onmouseout="this.style.borderColor='var(--border-default)'; this.style.color='var(--text-secondary)';"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
              ></path>
            </svg>
            <span>Browse Articles</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Navigation Section -->
  <section class="py-12" style="background: var(--bg-primary);">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h3 class="text-xl font-bold mb-4" style="color: var(--text-primary);">
          Or explore these sections
        </h3>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
        <!-- Categories -->
        <a
          href="/categories"
          class="group p-6 text-center rounded-xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
          style="background: var(--bg-secondary); border: 1px solid var(--border-default);"
        >
          <div
            class="w-12 h-12 mx-auto mb-4 flex items-center justify-center rounded-lg"
            style="background: var(--bg-tertiary);"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              style="color: var(--color-primary);"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 11H5m14-4H3m16 8H1"></path>
            </svg>
          </div>
          <h4 class="font-semibold mb-2" style="color: var(--text-primary);">Categories</h4>
          <p class="text-sm" style="color: var(--text-secondary);">Browse by topic</p>
        </a>

        <!-- Tags -->
        <a
          href="/tags"
          class="group p-6 text-center rounded-xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
          style="background: var(--bg-secondary); border: 1px solid var(--border-default);"
        >
          <div
            class="w-12 h-12 mx-auto mb-4 flex items-center justify-center rounded-lg"
            style="background: var(--bg-tertiary);"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              style="color: var(--color-primary);"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
              ></path>
            </svg>
          </div>
          <h4 class="font-semibold mb-2" style="color: var(--text-primary);">Tags</h4>
          <p class="text-sm" style="color: var(--text-secondary);">Find by keywords</p>
        </a>

        <!-- Authors -->
        <a
          href="/authors"
          class="group p-6 text-center rounded-xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
          style="background: var(--bg-secondary); border: 1px solid var(--border-default);"
        >
          <div
            class="w-12 h-12 mx-auto mb-4 flex items-center justify-center rounded-lg"
            style="background: var(--bg-tertiary);"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              style="color: var(--color-primary);"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              ></path>
            </svg>
          </div>
          <h4 class="font-semibold mb-2" style="color: var(--text-primary);">Authors</h4>
          <p class="text-sm" style="color: var(--text-secondary);">Meet our writers</p>
        </a>

        <!-- About -->
        <a
          href="/"
          class="group p-6 text-center rounded-xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
          style="background: var(--bg-secondary); border: 1px solid var(--border-default);"
        >
          <div
            class="w-12 h-12 mx-auto mb-4 flex items-center justify-center rounded-lg"
            style="background: var(--bg-tertiary);"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              style="color: var(--color-primary);"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h4 class="font-semibold mb-2" style="color: var(--text-primary);">About</h4>
          <p class="text-sm" style="color: var(--text-secondary);">Learn more</p>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
